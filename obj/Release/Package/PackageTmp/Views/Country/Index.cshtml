@model IEnumerable<BHShows.Models.Country_T>

@{
    ViewBag.Title = "Index";
}

<script src="@Url.Content("~/js/jquery-1.8.3.min.js")"></script>
<div class="container-fluid">
    <div class="page-content">
        <div class="row" style="min-height:850px;">
            <div class="col-lg-12">
                <section class="panel">

                    <p>
                        <a href="@Url.Content("~/Country/Create")" class="btn btn-danger pull-right">Create</a>
                    </p>
                    <br class="clearfix" />
                    <br class="clearfix" />
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Country)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Country)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.CountryID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.CountryID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.CountryID })
                                </td>
                            </tr>
                        }

                    </table>

                </section>
            </div>



        </div>
    </div>
</div>

