@model IEnumerable<BHShows.Models.Cinema_T>

@{
    ViewBag.Title = "Index";
}

<script src="@Url.Content("~/js/jquery-1.8.3.min.js")"></script>
<div class="container-fluid">
    <div class="page-content">
        <div class="row" style="min-height:850px;">
            <div class="col-lg-12">
                <section class="panel">

                    <table class="table table-striped table-advance table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Location)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LatLong)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.City_T.City)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Country_T.Country)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Location)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LatLong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City_T.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Country_T.Country)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.CinemaID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.CinemaID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.CinemaID })

                                    <a title="Menu Edit" class="btn btn-primary btn-xs pull-left"><i class="fa fa-pencil"></i></a>
                                    <a title="Menu Edit" class="btn btn-danger btn-xs pull-left"><i class="fa fa-trash"></i></a>
                                    <a title="Menu Edit" class="btn btn-success btn-xs pull-left"><i class="fa fa-check"></i></a>


                                </td>
                            </tr>
                        }

                    </table>

                </section>
            </div>



        </div>
    </div>
</div>



