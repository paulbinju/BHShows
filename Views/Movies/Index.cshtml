@model IEnumerable<BHShows.Models.Moviesx>

@{
    ViewBag.Title = "Index";
}

<script src="@Url.Content("~/js/jquery-1.8.3.min.js")"></script>
<div class="container-fluid">
    <div class="page-content">
        <div class="row" style="min-height:850px;">
            <div class="col-lg-12">
                <section class="panel">


                    <table class="table table-striped table-advance table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rated)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Stars)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Details)
                            </th>


                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Content("~/Movies/Details/")@Html.DisplayFor(modelItem => item.MovieID)">
                                        <b>@Html.DisplayFor(modelItem => item.Name)</b><br />
                                        (@Html.DisplayFor(modelItem => item.Language))
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rated)<br />
                                    @Html.DisplayFor(modelItem => item.Type)<br />
                                    @Html.DisplayFor(modelItem => item.ReleasedOn)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Stars)<br />
                                    @Html.DisplayFor(modelItem => item.Directors)<br />
                                    @Html.DisplayFor(modelItem => item.Writers)


                                </td>

                                <td style="width:400px;">
                                    @Html.DisplayFor(modelItem => item.Details)
                                </td>


                                <td>
                                    <a title="Menu Edit" class="btn btn-primary btn-xs pull-left"><i class="fa fa-pencil"></i></a>
                                    <a title="Menu Edit" class="btn btn-danger btn-xs pull-left"><i class="fa fa-trash"></i></a>
                                    <a title="Menu Edit" class="btn btn-success btn-xs pull-left"><i class="fa fa-check"></i></a>

 

                                   
                                </td>
                            </tr>
                        }

                    </table>


               
                </section>
            </div>



        </div>
    </div>
</div>



 
