@model IEnumerable<BHShows.Models.Movies_T>

@{
    ViewBag.Title = "Index";
}

<script src="@Url.Content("~/js/jquery-1.8.3.min.js")"></script>
<div class="container-fluid">
    <div class="page-content">
        <div class="row" style="min-height:850px;">
            <div class="col-lg-12">
                <section class="panel">
                    <p>
                        <a href="@Url.Content("~/Movies/Create")" class="btn btn-danger pull-right">Create</a>
                    </p>
                    <br class="clearfix" />
                    <br class="clearfix" />

                    @using (Html.BeginForm("Search"))
                    {
                        <table>
                            <tr>
                                <td style="width:100px">Movie Name</td>
                                <td style="width:300px"><input type="text" name="name" class="form-control" required /></td>
                                <td style="width:100px"><input type="submit" value="Search" class="btn btn-success" /></td>

                            </tr>


                        </table>
                    }
                    <br class="clearfix" />
                    <br class="clearfix" />
                    <table class="table" style="font-size:11px">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rated)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Stars)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Details)
                            </th>


                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Content("~/Movies/Details/")@Html.DisplayFor(modelItem => item.MovieID)">
                                        <b>@Html.DisplayFor(modelItem => item.Name)</b><br />

                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rated)<br />
                                    @Html.DisplayFor(modelItem => item.Type)<br />
                                    @Html.DisplayFor(modelItem => item.ReleasedOn)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Stars)<br />
                                    @Html.DisplayFor(modelItem => item.Directors)<br />
                                    @Html.DisplayFor(modelItem => item.Writers)


                                </td>

                                <td style="width:400px;">
                                    @Html.DisplayFor(modelItem => item.Details)
                                </td>


                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.MovieID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.MovieID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.MovieID })
                                </td>
                            </tr>
                        }

                    </table>

                </section>
            </div>



        </div>
    </div>
</div>
